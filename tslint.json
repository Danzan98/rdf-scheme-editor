{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "jsRules": {},
  "rules": {
    "quotemark": [true, "single"],
    "indent": [true, "spaces", 2],
    "trailing-comma": [false],
    "interface-name": [true, "never-prefix"],
    "arrow-parens": [false, "as-needed"],
    "curly": true
  },
  "rulesDirectory": []
}
